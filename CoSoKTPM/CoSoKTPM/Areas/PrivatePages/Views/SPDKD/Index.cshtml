@using CoSoKTPM.Models
@{
    ViewBag.Title = "Index";
    List<SanPham> ds = ViewData["DanhSachSP"] as List<SanPham>;
}
<style>
    form {
        display: inline;
    }
</style>
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Danh sách sản phẩm</h4>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href='@Url.Action("Index", "Dashboard")'>Trang chủ</a></li>
                    <li class="breadcrumb-item active"><a href='@Url.Action("Index", "SPDKD")'>Danh sách sản phẩm đang kinh doanh</a></li>
                </ol>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Dữ liệu</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>Mã SP</th>
                                        <th>Tên SP</th>
                                        <th>Nội dung</th>
                                        <th>NSX</th>
                                        <th>Ngày đăng</th>
                                        <th>DVT</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int n = 1;
                                        foreach (SanPham i in ds)
                                        {
                                            <tr>
                                                <td>@i.MaSP</td>
                                                <td>@i.TenSP</td>
                                                <td>@i.NoiDung</td>
                                                <td>@i.NhaSanXuat</td>
                                                <td>@i.NgayDang</td>
                                                <td>@i.DVT</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@using CoSoKTPM.Models
@{
    ViewBag.Title = "Index";
    SanPham i = ViewData["SPCanXem"] as SanPham;
}
<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href='@Url.Action("Index", "Home")'>Trang chủ</a></li>
                    <li class="breadcrumb-item active">Sản phẩm</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Shop Detail  -->
<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active"> <img class="d-block w-100" src="@i.HinhDD" alt="First slide"> </div>
                        <div class="carousel-item"> <img class="d-block w-100" src="@i.HinhDD" alt="Second slide"> </div>
                        <div class="carousel-item"> <img class="d-block w-100" src="@i.HinhDD" alt="Third slide"> </div>
                    </div>
                    <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                        <span class="sr-only">@i.TenSP</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                        <span class="sr-only">Next</span>
                    </a>
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                            <img class="d-block w-100 img-fluid" src="@i.HinhDD" alt="" />
                        </li>
                        <li data-target="#carousel-example-1" data-slide-to="1">
                            <img class="d-block w-100 img-fluid" src="@i.HinhDD" alt="" />
                        </li>
                        <li data-target="#carousel-example-1" data-slide-to="2">
                            <img class="d-block w-100 img-fluid" src="@i.HinhDD" alt="" />
                        </li>
                    </ol>
                </div>
            </div>
            <div class="col-xl-7 col-lg-7 col-md-6">
                <div class="single-product-details">
                    <h2>@i.NdTomTat</h2>
                    <p style="font-size: 20px"><strong>Giá: </strong><span><del>@String.Format("{0:#,##0 đ }", i.GiaBan)</del></span></p>
                    <p style="font-size: 20px"><span style="color:orangered">@String.Format("{0:#,##0 đ }", (i.GiaBan * 80) / 100) / @i.DVT</span></p>
                    <p style="font-size: 20px"><strong>Mã sản phẩm: </strong>@i.MaSP</p>
                    <p style="font-size: 20px"><strong>Thương hiệu/xuất xứ: </strong>@i.NhaSanXuat</p>
                    <p style="font-size: 20px"><strong>Thông tin chi tiết: </strong></p>
                    <p>
                        @Html.Raw(i.NoiDung)
                    </p>
                    <ul>
                        <li>
                            <div class="form-group quantity-box">
                                <label class="control-label">Số lượng:</label>
                                <input class="form-control" value="0" min="0" max="20" type="number">
                            </div>
                        </li>
                    </ul>
                    <div class="cart-and-bay-btn">
                        @using (Html.BeginForm("AddToCart", "Home", FormMethod.Post))
                        {
                            <div class="row">
                                <div class="col-lg-6">
                                    <input type="hidden" name="MaSP" value="@i.MaSP" />
                                    <a href='@Url.Action("Index", "Home")' class="ml-auto btn hvr-hover">&lt;&lt;Quay lại trang chủ</a>
                                </div>
                                <div class="col-lg-6">
                                    <button class="cart btn hvr-hover">Thêm vào giỏ hàng</button>
                                </div>
                            </div>

                        }
                    </div>
                    <hr>
                    <div class="add-to-btn">
                        <div class="share-bar">
                            <a class="btn hvr-hover" href="#"><i class="fab fa-facebook" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="#"><i class="fab fa-google-plus" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="#"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="#"><i class="fab fa-pinterest-p" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="#"><i class="fab fa-whatsapp" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- End Cart -->
